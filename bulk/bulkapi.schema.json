{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lionweb.io/bulkapi.schema.json",
  "title": "LionWeb Bulk API",
  "type": "object",
  "properties": {
    "success": {
      "description": "Whether the request has been processed successfully.",
      "type": "boolean"
    },
    "messages": {
      "description": "Additional messages besides the actual response.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "messageCode": {
            "description": "Identifies the message type.",
            "$ref": "#/$defs/id"
          },
          "message": {
            "description": "Human-readable message.",
            "type": "string"
          },
          "data": {
            "description": "Additional data, depending on the message type.",
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": [
          "messageCode",
          "message",
          "data"
        ],
        "additionalProperties": false,
        "minProperties": 3,
        "maxProperties": 3
      },
      "uniqueItems": false
    },
    "chunk": {
      "description": "Model content response, if applicable to the command.",
      "$ref": "#/$defs/serializationChunk"
    },
    "nodeIds": {
      "description": "List of node ids, if applicable to the command.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/id"
      }
    }
  },
  "required": [
    "success",
    "messages"
  ],
  "additionalProperties": false,
  "minProperties": 2,
  "maxProperties": 3,
  "$defs": {
    "id": {
      "$ref": "./../serialization/serialization.schema.json#$defs/id"
    },
    "serializationChunk": {
      "$ref": "./../serialization/serialization.schema.json"
    }
  }
}
